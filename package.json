{
  "name": "saman-security",
  "version": "0.0.1",
  "description": "A smart security plugin for WordPress.",
  "main": "index.js",
  "scripts": {
    "start": "npm-run-all --parallel watch:css start:react",
    "start:react": "wp-scripts start src/index.js --output-path=assets/js",
    "watch:css": "chokidar 'src/less/**/*.less' -c 'npm run build:css'",
    "build": "npm run build:css && wp-scripts build src/index.js --output-path=assets/js",
    "build:css": "lessc src/less/main.less src/index.css"
  },
  "keywords": [
    "wordpress",
    "security",
    "react"
  ],
  "author": "Juan Denis",
  "license": "GPL-2.0+",
  "devDependencies": {
    "@wordpress/scripts": "^27.6.0",
    "chokidar-cli": "^3.0.0",
    "less": "^4.2.0",
    "npm-run-all": "^4.1.5"
  },
  "dependencies": {
    "@wordpress/api-fetch": "^6.50.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
